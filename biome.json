{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentWidth": 2,
    "indentStyle": "space",
    "formatWithErrors": true,
    "attributePosition": "auto",
    "include": [
      "*.ts",
      "*.mts",
      "*.cts",
      "*.js",
      "*.cjs",
      "*.mjs",
      "*.jsx",
      "*.tsx",
      "*.d.ts",
      "*.d.mts",
      "*.d.cts",
      "*.vue",
      "*.html",
      "*.css",
      "*.json",
      "*.jsonc",
      "*.astro",
      "*.svelte",
      "*.graphql",
      "*.webmanifest"
    ]
  }
}
